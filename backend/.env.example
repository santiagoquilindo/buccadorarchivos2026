# Backend server
PORT=3000
HOST=127.0.0.1

# Drive source
DRIVE_FOLDER_ID=
DRIVE_USE_SHARED_DRIVE=false
DRIVE_ID=

# Auth mode: oauth | service_account
DRIVE_AUTH_MODE=oauth

# OAuth2
GOOGLE_CLIENT_ID=[REDACTED]
GOOGLE_CLIENT_SECRET=[REDACTED]
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2/callback
GOOGLE_REFRESH_TOKEN=[REDACTED]

# Service account (alternative to OAuth)
DRIVE_SERVICE_ACCOUNT_JSON=
DRIVE_SERVICE_ACCOUNT_JSON_FILE=

# Retry policy
DRIVE_API_MAX_RETRIES=5

# Webhook (optional, for push notifications)
DRIVE_WEBHOOK_URL=
DRIVE_WEBHOOK_TOKEN=[REDACTED]
DRIVE_WATCH_EXPIRATION_MS=86400000
