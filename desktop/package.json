{
    "name": "inventario-buscador",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "dev": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win nsis"
    },
    "author": "",
    "license": "ISC",
    "description": "Buscador local de inventario",
    "devDependencies": {
        "electron": "^40.6.1",
        "electron-builder": "^26.8.1"
    },
    "build": {
        "appId": "com.sag.inventariobuscador",
        "productName": "Inventario Buscador",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "asar": true,
        "files": [
            "main.js",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "../backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!node_modules/.cache/**"
                ]
            },
            {
                "from": "../frontend",
                "to": "frontend",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "runAfterFinish": true,
            "deleteAppDataOnUninstall": false
        }
    },
    "dependencies": {
        "inventario-login-local": "file:.."
    }
}
